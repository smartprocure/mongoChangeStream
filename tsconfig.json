{
  "include": ["src/*.ts"],
  "exclude": ["src/*.test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2022",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
